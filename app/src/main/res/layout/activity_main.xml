<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sample.arc.myapplication.MainActivity">


    <Button
        android:id="@+id/buttonLifecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lifecycle"/>

    <Button
        android:id="@+id/buttonLifecycleCheckState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lifecycle (check state)"/>

    <Button
        android:id="@+id/buttonLiveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LiveData"/>

    <Button
        android:id="@+id/buttonLiveDataLeak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LiveData (Leak)"/>


    <Button
        android:id="@+id/buttonTransformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transformation"/>

    <Button
        android:id="@+id/buttonViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Model"/>

</LinearLayout>
